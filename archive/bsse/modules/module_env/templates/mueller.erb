#%Module1.0#####################################################################
##
## mueller modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for mueller\n"
}

module-whatis   "provides the mueller module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/mueller/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/mueller/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
