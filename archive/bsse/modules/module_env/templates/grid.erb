#%Module1.0#####################################################################
##
## grid modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for grid\n"
}

module-whatis   "provides the grid module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/grid/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/grid/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
