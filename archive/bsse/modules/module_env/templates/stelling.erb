#%Module1.0#####################################################################
##
## stelling modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for stelling\n"
}

module-whatis   "provides the stelling module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/stelling/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/stelling/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
