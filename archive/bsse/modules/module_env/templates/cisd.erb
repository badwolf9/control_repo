#%Module1.0#####################################################################
##
## cisd modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for cisd\n"
}

module-whatis   "provides the cisd module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/cisd/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/cisd/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
