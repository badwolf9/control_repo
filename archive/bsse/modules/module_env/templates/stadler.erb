#%Module1.0#####################################################################
##
## stadler modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for stadler\n"
}

module-whatis   "provides the stadler module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/stadler/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/stadler/other/etc/modulefiles
setenv		MODULES_DISTRO		"other"
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
