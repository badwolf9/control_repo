#%Module1.0#####################################################################
##
## khammash modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for khammash\n"
}

module-whatis   "provides the khammash module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/khammash/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/khammash/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
