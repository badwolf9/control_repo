#%Module1.0#####################################################################
##
## cina modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for cina\n"
}

module-whatis   "provides the cina module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/cina/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% elsif @operatingsystem =~ /Ubuntu/ %>
set             modroot                 /usr/local/cina/ub<%= @lsbmajdistrelease %>/etc/modulefiles
setenv          MODULES_DISTRO          "ub<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/cina/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
