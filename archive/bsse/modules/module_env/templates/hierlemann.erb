#%Module1.0#####################################################################
##
## hierlemann modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for hierlemann\n"
}

module-whatis   "provides the hierlemann module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/hierlemann/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/hierlemann/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
