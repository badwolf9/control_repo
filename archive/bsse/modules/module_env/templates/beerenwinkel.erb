#%Module1.0#####################################################################
##
## beerenwinkel modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for beerenwinkel\n"
}

module-whatis   "provides the beerenwinkel module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/beerenwinkel/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv          MODULES_DISTRO          "el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/beerenwinkel/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
