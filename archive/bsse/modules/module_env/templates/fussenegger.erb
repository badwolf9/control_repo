#%Module1.0#####################################################################
##
## fussenegger modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for fussenegger\n"
}

module-whatis   "provides the fussenegger module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/fussenegger/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/fussenegger/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
