#%Module1.0#####################################################################
##
## iber modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for iber\n"
}

module-whatis   "provides the iber module environment"

<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/iber/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/iber/other/etc/modulefiles
<% end %>

append-path     MODULEPATH              $modroot

module load repo/bsse
