#%Module1.0#####################################################################
##
## bsse modulefile
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodule- loads the environment for bsse\n"
}

module-whatis   "provides the bsse module environment"

setenv MODULES_MACH [uname machine]
setenv MODULES_OS [uname sysname]
setenv MODULES_REL [uname release]


<% if @operatingsystem =~ /RedHat|CentOS/ %>
set             modroot                 /usr/local/bsse/el<%= @lsbmajdistrelease %>/etc/modulefiles
setenv		MODULES_DISTRO		"el<%= @lsbmajdistrelease %>"
<% else %>
set             modroot                 /usr/local/bsse/other/etc/modulefiles
setenv		MODULES_DISTRO		"other"
<% end %>

append-path     MODULEPATH              $modroot
